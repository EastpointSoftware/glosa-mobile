        <!--Set Vehicle ID-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:text="Unique Vehicle Id"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/traffic_green"
                    android:textSize="18dp"
                    android:hint="123456"
                    local:MvxBind="Text VehicleId"
                    android:lines="1"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:singleLine="true" />
            </LinearLayout>
        <!--Enable Advanced Calculator-->
        <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Enable Advanced Calculator" />
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                local:MvxBind="Checked EnableAdvancedCalculator"
                android:layout_gravity="center_vertical"
                android:id="@+id/switch2" />
        </LinearLayout>-->
        <!--Maximum Distance-->
        <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
