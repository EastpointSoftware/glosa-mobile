                        android:id="@+id/radio_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Right"
                        local:MvxBind="Click ChangeLaneManeverkCommand;Enabled false" />
                </RadioGroup>
            </LinearLayout>-->
        <!--Enable GPS Time-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Sync with SNTP" />
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    local:MvxBind="Checked EnableGPSTime"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/switch6" />
            </LinearLayout>
        <!--Enabled WiFi-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Enable WiFi " />
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    local:MvxBind="Checked EnableWiFiMode"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/switch7" />
            </LinearLayout>
        <!--WiFi Only-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="WiFi Only" />
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    local:MvxBind="Checked EnableWiFiOnlyMode"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/switch8" />
            </LinearLayout>
        <!--WiFi Network-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:text="WiFi Network"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/traffic_green"
                    android:textSize="18dp"
                    android:hint="CITS"
                    android:enabled="true"
                    local:MvxBind="Text WiFiNetworkName"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:maxLines="1" />
            </LinearLayout>
        <!--WiFi Secure Key-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:text="WiFi Secure Key"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/traffic_green"
                    android:textSize="18dp"
                    android:hint="12345"
                    android:enabled="true"
                    local:MvxBind="Text WiFiNetworkPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:maxLines="1" />
            </LinearLayout>
		<!--Version/Build-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="4dp">
                <TextView
                    android:text="Build:"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
					local:MvxBind="Text AppVersionBuild"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>