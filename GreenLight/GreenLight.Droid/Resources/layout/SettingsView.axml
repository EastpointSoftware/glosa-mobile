            local:MvxBind="Progress MaximumInvokeDistance" />-->
        <!--TESTING-->
        <!--Enable Test Route (A45)-->
        <!--<LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Enable Test Route (A45)" />
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    local:MvxBind="Checked EnableTestRoute"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/switch4" />
            </LinearLayout>-->
        <!--Speed limit-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:text="Speed Limit (MPH)"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/traffic_green"
                    android:textSize="18dp"
                    android:hint="40 MPH"
                    android:enabled="false"
                    local:MvxBind="Text SpeedLimit" />
            </LinearLayout>
        <!--Enable Intersection Mode-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Enable Intersection Mode" />
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    local:MvxBind="Checked EnableIntersectionMode"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/switch5" />
            </LinearLayout>
        <!--Set Intersection ID-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:text="Intersection Id"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/traffic_green"
                    android:textSize="18dp"
                    android:hint="123456"
                    android:enabled="true"
                    local:MvxBind="Text IntersectionId"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:maxLines="1" />
            </LinearLayout>
        <!--Direction InBound/OutBound-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Direction" />
                <RadioGroup
                    android:id="@+id/radio_group_direction"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="fill_horizontal">
                    <RadioButton
                        android:id="@+id/radio_IB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Bound"
                        local:MvxBind="Click ChangeLaneManeverkCommand;Enabled true"
                        android:layout_gravity="top" />
                    <RadioButton
                        android:id="@+id/radio_OB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out Bound"
                        local:MvxBind="Click ChangeLaneManeverkCommand;Enabled true" />
                </RadioGroup>
            </LinearLayout>
        <!--Maneuver Direction-->
        <!--<LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Lane Maneuver " />
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/radio_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left"
                        local:MvxBind="Click ChangeLaneManeverkCommand;Enabled false"
                        android:layout_gravity="top" />
                    <RadioButton
                        android:id="@+id/radio_ahead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahead"
                        local:MvxBind="Click ChangeLaneManeverkCommand;Enabled true;Checked true" />
